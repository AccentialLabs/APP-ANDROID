<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_layout" >

    <!-- header -->

    <include
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        layout="@layout/include_tablet_header" />

    <!-- body -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rodape"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="500dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_wishlist"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meus Dados"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </TableRow>

            <View
                android:id="@+id/view1"
                android:layout_width="500dp"
                android:layout_height="720dp"
                android:layout_alignLeft="@+id/tableRow1"
                android:layout_below="@+id/tableRow1"
                android:background="#ffffff" />

            <com.loopj.android.image.SmartImageView
                android:id="@+id/imageView_userPhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/view1"
                android:layout_alignTop="@+id/view1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/accential" />

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView_userPhoto"
                android:layout_below="@+id/imageView_userPhoto"
                android:layout_marginTop="10dp" >

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editText_userName"
                        android:layout_width="480dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:textSize="20dp" >

                        <requestFocus />
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Email"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editText_userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tableLayout1"
                android:layout_below="@+id/tableLayout1"
                android:layout_marginTop="10dp" >

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Data de Nascimento"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sexo"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editText_userBirthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textEmailAddress" />

                    <Spinner
                        android:id="@+id/spinner_userGender"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </TableRow>
            </TableLayout>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="500dp"
                android:layout_height="3dp"
                android:layout_alignLeft="@+id/view1"
                android:layout_below="@+id/tableLayout2"
                android:layout_marginTop="10dp"
                android:background="#F5DEB3" >
            </TableRow>

            <TableLayout
                android:id="@+id/tableLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view1"
                android:layout_below="@+id/tableRow8"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" >

                <TableRow
                    android:id="@+id/tableRow9"
                    android:layout_width="480dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EndereÃ§o"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editText_userAddress"
                        android:layout_width="480dp"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/tableLayout4"
                android:layout_width="490dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tableLayout3"
                android:layout_below="@+id/tableLayout3"
                android:layout_marginTop="10dp" >

                <TableRow
                    android:id="@+id/tableRow11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="CEP"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="NÃºmero"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editText_userCEPAddress"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress" />

                    <EditText
                        android:id="@+id/editText_userNumerAddress"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="textEmailAddress" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Bairro"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Complemento"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editText_userDistrictAddress"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress" />

                    <EditText
                        android:id="@+id/editText_userComplementsAddress"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="textEmailAddress" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="UF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Cidade"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <!--
                    <EditText
                        android:id="@+id/editText_userUFAddress"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress" />
                    -->

                    <Spinner
                        android:id="@+id/spinner_userUFAddress"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/editText_userCityAddress"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="textEmailAddress" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/button1"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/view1"
                android:layout_below="@+id/tableLayout4"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#FF8C00"
                android:onClick="updateUser"
                android:text="Salvar"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button1"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/button1"
                android:background="#CDC1C5"
                android:onClick="cancel"
                android:text="Cancelar" />
        </RelativeLayout>
    </ScrollView>

    <!-- footer -->

    <include
        android:id="@+id/rodape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/include_tablet_footer" />

</RelativeLayout>