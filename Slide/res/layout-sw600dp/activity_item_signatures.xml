<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/imageView_compPhoto"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view1"
        android:src="@drawable/diviser_h" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:src="@drawable/diviser_v" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_toRightOf="@+id/imageView3"
        android:src="@drawable/diviser_v" />

    <ImageView
        android:id="@+id/imageView_botaoAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignRight="@+id/imageView4"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/bt_add" />

    <TextView
        android:id="@+id/textView_companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView_compPhoto"
        android:maxLines="1"
        android:text="VITAL CLINICA DE ESTÃ‰TICA - ERP "
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView_botaoDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView_botaoAdd"
        android:layout_marginRight="32dp"
        android:src="@drawable/bt_delete" />

    <TextView
        android:id="@+id/textView_companyEmail"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_companyName"
        android:layout_below="@+id/imageView_botaoDelete"
        android:maxLines="1"
        android:text="atendimento@vitalesthetic.com.br"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="5dp"
        android:src="@drawable/diviser_v" />

    <TextView
        android:id="@+id/textView_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageView5"
        android:text="Essa empresa possui "
        android:textColor="#D2691E" />

    <TextView
        android:id="@+id/textView_qtdOfertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_text"
        android:layout_below="@+id/textView_text"
        android:text="99 Ofertas"
        android:textColor="#D2691E"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_qtdOfertas"
        android:layout_below="@+id/textView_qtdOfertas"
        android:text="para o seu perfil"
        android:textColor="#D2691E" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginTop="145dp"
        android:src="@drawable/bt_arrow" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="21dp"
        android:src="@drawable/diviser_h" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_below="@+id/imageView7"
        android:layout_marginTop="21dp"
        android:src="@drawable/arrow_dir" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignTop="@+id/imageView8"
        android:text="Veja todas as ofertas dessa empresa"
        android:textColor="#D97500"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_botaoAdd"
        android:layout_alignTop="@+id/imageView6"
        android:text="Veja essas ofertas"
        android:textColor="#D97500"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/textView_companyDescription"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginLeft="10dp"
		android:maxLines="9"
        android:layout_marginTop="10dp"
        android:text="DESCRICAO" />

</RelativeLayout>