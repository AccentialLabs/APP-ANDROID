<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView_bgTop"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:src="@drawable/bg_top" />

    <ImageView
        android:id="@+id/imageView_logoTrueOne"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/logo_trueone" />

    <ImageView
        android:id="@+id/imageView_avisoConvite"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/imageView_avisoBandeira"
        android:layout_alignLeft="@+id/imageView_avisoBandeira"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/icon_convite" />

    <ImageView
        android:id="@+id/imageView_avisoBandeira"
        android:layout_width="17dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_logoTrueOne"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="120dp"
        android:src="@drawable/icon_aviso"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewHeader_NomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView_avisoConvite"
        android:layout_marginRight="10px"
        android:layout_marginTop="40dp"
        android:fontFamily="Helvetica"
        android:text="Nome do Usuario"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageView_backgroundBusca"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_bgTop"
        android:layout_marginRight="-10px"
        android:src="@drawable/bg_busca" />

    <ImageView
        android:id="@+id/imageView_bgInputBusca"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/imageView_logoTrueOne"
        android:layout_alignTop="@+id/imageView_backgroundBusca"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_form_busca" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/imageView_bgInputBusca"
        android:layout_alignLeft="@+id/imageView_bgInputBusca"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/imageView_btnProcurar"
        android:background="@null"
        android:ems="10"
        android:focusable="false"
        android:hint="busque uma oferta"
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:textSize="13dp" >
    </EditText>

    <ImageView
        android:id="@+id/imageView_btnProcurar"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/imageView_bgInputBusca"
        android:layout_alignTop="@+id/imageView_bgInputBusca"
        android:layout_marginRight="2dp"
        android:src="@drawable/input_form_busca_icon" />

    <TextView
        android:id="@+id/textView_qtdAvisos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView_avisoBandeira"
        android:layout_alignTop="@+id/imageView_logoTrueOne"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="."
        android:textColor="#ffffff"
        android:textSize="13px"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/editText1"
        android:layout_alignLeft="@+id/textViewHeader_NomeUsuario"
        android:layout_alignRight="@+id/textViewHeader_NomeUsuario"
        android:layout_alignTop="@+id/textViewHeader_NomeUsuario"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/textView_qtdConvites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView_avisoConvite"
        android:layout_marginTop="7dp"
        android:layout_marginRight="4dp"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="12px" />

</RelativeLayout>