<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <com.loopj.android.image.SmartImageView
                android:id="@+id/svOfferImg"
                android:layout_width="700dp"
                android:layout_height="350dp"
                android:background="#ffffff"
                android:src="@drawable/examplo_img_horizontal" />

            <com.loopj.android.image.SmartImageView
                android:id="@+id/ivOfferPhoto1"
                android:layout_width="700dp"
                android:layout_height="350dp"
                android:background="#ffffff"
                android:src="@drawable/assinaturas_off"
                android:visibility="gone" />

            <com.loopj.android.image.SmartImageView
                android:id="@+id/ivOfferPhoto2"
                android:layout_width="700dp"
                android:layout_height="350dp"
                android:background="#ffffff"
                android:src="@drawable/assinaturas_on"
                android:visibility="gone" />

            <com.loopj.android.image.SmartImageView
                android:id="@+id/ivOfferPhoto3"
                android:layout_width="700dp"
                android:layout_height="350dp"
                android:background="#ffffff"
                android:src="@drawable/assinaturas_off"
                android:visibility="gone" />

            <com.loopj.android.image.SmartImageView
                android:id="@+id/ivOfferPhoto4"
                android:layout_width="700dp"
                android:layout_height="350dp"
                android:background="#ffffff"
                android:src="@drawable/assinaturas_off"
                android:visibility="gone" />

            <com.loopj.android.image.SmartImageView
                android:id="@+id/ivOfferPhoto5"
                android:layout_width="700dp"
                android:layout_height="350dp"
                android:background="#ffffff"
                android:src="@drawable/assinaturas_off"
                android:visibility="gone" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_below="@+id/horizontalScrollView1"
        android:alpha="0.9"
        android:background="#808080" />

    <Button
        android:id="@+id/btnComprar"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#f37165"
        android:clickable="false"
        android:padding="10dp"
        android:text="COMPRAR"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvOfferValComDesconto"
        android:layout_below="@+id/tvOfferValComDesconto"
        android:paddingLeft="20dp"
        android:text="12x de R$ --,--"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/star1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/adventa_star_empty" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/star1"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/star1"
        android:src="@drawable/adventa_star_empty" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/star2"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/star2"
        android:src="@drawable/adventa_star_empty" />

    <ImageView
        android:id="@+id/star4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/star3"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/star3"
        android:src="@drawable/adventa_star_empty" />

    <ImageView
        android:id="@+id/star5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/star4"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/star4"
        android:src="@drawable/adventa_star_empty" />

    <View
        android:id="@+id/vMetrics"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/star1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp" />

    <View
        android:id="@+id/view3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/vMetrics"
        android:layout_alignTop="@+id/vMetrics"
        android:background="@drawable/border"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vMetrics"
        android:layout_alignLeft="@+id/vMetrics"
        android:layout_alignRight="@+id/view3"
        android:layout_alignTop="@+id/vMetrics"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="-"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vMetrics"
        android:layout_alignTop="@+id/vMetrics"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/view3"
        android:alpha="0.9"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="-"
        android:textColor="#808080"
        android:textSize="12sp" />

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/vMetrics"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/vMetrics"
        android:layout_marginTop="3dp" />

    <View
        android:id="@+id/vHideMetrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view5"
        android:layout_alignLeft="@+id/vMetrics"
        android:layout_alignTop="@+id/vMetrics"
        android:alpha="0.9"
        android:background="#808080"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pbOffersDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <View
        android:id="@+id/vBlockOffersDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:alpha="0.4"
        android:background="#000000"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/horizontalScrollView1"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:text="Tenis All Star cano alto"
        android:textColor="#ffffff"
        android:textSize="28dp" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnComprar"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/adventa_icon_share_on" />

    <TextView
        android:id="@+id/tvPlusOrLess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/view1"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="55sp" />

    <TextView
        android:id="@+id/tvOfferValComDesconto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvOfferValOriginal"
        android:layout_below="@+id/tvOfferValOriginal"
        android:paddingLeft="20dp"
        android:text="Por R$ --,--"
        android:textSize="42sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_below="@+id/view1"
        android:alpha="0.9"
        android:background="#808080"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view1"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textColor="#cccccc"
        android:textSize="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvOfferValOriginal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:text="De R$ --,--"
        android:textSize="24sp" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/imgCompLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/vMetrics"
        android:layout_below="@+id/vMetrics"
        android:layout_marginTop="21dp"
        android:maxHeight="80dp"
        android:maxWidth="180dp"
        android:src="@drawable/accential" />

</RelativeLayout>