<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="436dp"
    android:layout_height="130dp"
    android:background="#fff" >

    <View
        android:id="@+id/view_ladoEsquerdoTblCor"
        android:layout_width="30dp"
        android:layout_height="128dp"
        android:layout_alignLeft="@+id/view7"
        android:layout_alignTop="@+id/view7"
        android:layout_marginTop="-2dp"
        android:background="#dcdcdc" />

    <View
        android:id="@+id/view7"
        android:layout_width="434dp"
        android:layout_height="126dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="-4dp" />

    <View
        android:id="@+id/view8"
        android:layout_width="30dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/view7"
        android:background="#dcdcdc" />

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="03dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginRight="21dp"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/view8" >

        <View
            android:id="@+id/view_cor_preto"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:background="#000000" />

        <View
            android:id="@+id/view_cor_cinza"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:background="#dcdcdc" />

        <View
            android:id="@+id/view_cor_branco"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:background="#ffffff" />

        <View
            android:id="@+id/view_cor_azul_claro"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:background="#CAE1FF" />

        <View
            android:id="@+id/view_cor_azul"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:background="#0000ff" />

        <View
            android:id="@+id/view_cor_vermelho"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:background="#FF0000" />

        <View
            android:id="@+id/view_cor_verde"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:background="#2E8B57" />

        <View
            android:id="@+id/view_cor14"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:background="#9AFF9A" />
    </TableRow>

    <com.accential.trueone.utils.VerticalTextView
        android:id="@+id/textView_verticalTamanho"
        style="@style/verticalTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_textoInformacoes"
        android:layout_alignTop="@+id/view7"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:gravity="bottom|right"
        android:text="Tamanho"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="434dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view8"
        android:layout_marginTop="-3dp"
        android:src="@drawable/diviser_h" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="434dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-2dp"
        android:src="@drawable/diviser_h" />

    <com.accential.trueone.utils.VerticalTextView
        android:id="@+id/textView_verticalConfiguracao"
        style="@style/verticalTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view8"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:gravity="bottom|right"
        android:text="Configuração"
        android:textSize="14dp" />

    <com.accential.trueone.utils.VerticalTextView
        android:id="@+id/verticalTextView1"
        style="@style/verticalTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tableRow4"
        android:layout_toLeftOf="@+id/tableRow4"
        android:gravity="bottom|right"
        android:text="Cor"
        android:textSize="14dp" />

</RelativeLayout>