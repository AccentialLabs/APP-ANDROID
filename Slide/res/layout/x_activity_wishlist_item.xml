<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvWishTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvWishDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvWishTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvWishDesc"
        android:layout_below="@+id/tvWishDesc"
        android:layout_marginTop="5dp"
        android:text="Solicitação"
        android:textColor="#808080"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvWishDtSolicitacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="11/11/1111"
        android:textColor="#808080"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="Data Limite"
        android:textColor="#808080"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Ofertas"
        android:textColor="#808080"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvWishLimite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvWishDtSolicitacao"
        android:layout_alignBottom="@+id/tvWishDtSolicitacao"
        android:layout_alignRight="@+id/textView2"
        android:text="11/11/1111"
        android:textColor="#808080"
        android:layout_marginBottom="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvWishQtdOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:gravity="center"
        android:text="2"
        android:textColor="#f37165"
        android:textSize="14sp"
        android:textStyle="bold" />

    

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvWishDtSolicitacao" >
    </TableRow>

</RelativeLayout>