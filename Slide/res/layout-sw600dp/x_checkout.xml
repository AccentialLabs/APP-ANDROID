<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/include1"
        android:layout_height="40dp"
        layout="@layout/x_include_header" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include1"
        android:background="#f37165" />

    <TextView
        android:id="@+id/tvCheckOfferTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnLess"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/btnPlus"
        android:layout_alignBottom="@+id/btnPlus"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/btnPlus"
        android:background="@drawable/border"
        android:text="-"
        android:textSize="30dp"
        android:textColor="#808080" />

    <EditText
        android:id="@+id/etQtd"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/btnLess"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnLess"
        android:background="@drawable/border"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:inputType="number"
        android:text="22"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/tvCheckUniVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView2"
        android:text="R$ 9999,99"
        android:textColor="#808080"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCheckFrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="R$ 13,50"
        android:textColor="#808080"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tvCheckQtdEntrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView5"
        android:text="10 dias úteis"
        android:textColor="#808080"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPlus"
        android:layout_below="@+id/ivCheckOfferPhoto"
        android:layout_marginTop="10dp"
        android:text="Quantidade"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="3dp"
        android:background="#cccccc" >
    </TableRow>

    <Button
        android:id="@+id/btnPlus"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/ivCheckOfferPhoto"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:text="+"
        android:textSize="30dp"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/tvCheckTotalVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/textView4"
        android:text="R$ 9999,99"
        android:textColor="#808080"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvCheckTotalVal"
        android:layout_alignLeft="@+id/textView5"
        android:text="Valor Total:"
        android:textColor="#808080"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="20dp"
        android:text="Prazo de Ent.:"
        android:textColor="#808080"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvCheckQtdEntrega"
        android:layout_alignLeft="@+id/textView2"
        android:text="Frete:"
        android:textColor="#808080"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/ivCheckOfferPhoto"
        android:text="Valor Unit.:"
        android:textColor="#808080"
        android:textSize="16sp" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/ivCheckOfferPhoto"
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_2"
        android:padding="5dp"
        android:src="@drawable/examplo_img_horizontal" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCheckEndereco"
        android:layout_alignRight="@+id/tvCheckEndereco"
        android:layout_below="@+id/tvCheckEndereco"
        android:paddingRight="20dp"
        android:text="Cep..."
        android:layout_marginTop="3dp"
        android:textColor="#808080"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnPagamentoCartao"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:background="#f37165"
        android:text="COMPRAR"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvCheckCodDoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/textView6"
        android:text="1111111"
        android:textColor="#808080"
        android:textSize="14sp" />

    <View
        android:id="@+id/vBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:alpha="0.6"
        android:background="#000"
        android:visibility="gone" />

    <Button
        android:id="@+id/button1"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnPagamentoCartao"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#3399cc"
        android:text="Escolher Endereço"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnCheckAddAddress"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnPagamentoCartao"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="#3399cc"
        android:padding="5dp"
        android:text="Novo Endereço"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPlus"
        android:layout_below="@+id/btnLess"
        android:text="Código do Produto: "
        android:textColor="#808080"
        android:layout_marginTop="10dp"
        android:textSize="16sp" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
		android:layout_marginRight="20dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView6" >
    </TableRow>
    
    <View
        android:id="@+id/view2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/tableRow1"
        android:layout_below="@+id/tableRow1"
        android:layout_marginTop="5dp"
        android:background="@drawable/border" />
    
    <TextView
        android:id="@+id/textView9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignTop="@+id/view2"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="12"
        android:textColor="#808080"
        android:textSize="22sp" />
    
    <View
        android:id="@+id/view3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/view2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/view2" />
    
    <TextView
        android:id="@+id/textView10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/view3"
        android:layout_alignTop="@+id/view3"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="22"
        android:textColor="#808080"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view2"
        android:layout_below="@+id/view2"
        android:text="Endereço de Entrega:"
        android:textColor="#808080"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"  />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginTop="3dp"
        android:layout_marginRight="20dp"
        android:layout_alignLeft="@+id/textView100"
        android:layout_below="@+id/textView100" >
    </TableRow>

    <TextView
        android:id="@+id/tvAddLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView100"
        android:layout_alignBottom="@+id/textView100"
        android:layout_toRightOf="@+id/textView100"
        android:text="TextView"
        android:textColor="#808080"
        android:layout_marginLeft="5dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCheckEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView100"
        android:layout_alignRight="@+id/tableRow2"
        android:layout_below="@+id/tableRow2"
        android:layout_marginTop="5dp"
        android:paddingRight="20dp"
        android:text="Rua .... endereco"
        android:textColor="#808080"
        android:textSize="14sp" />
    
    <ProgressBar
        android:id="@+id/pbCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
    
    <Spinner
        android:id="@+id/spCheckAddresses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:visibility="gone" />

</RelativeLayout>