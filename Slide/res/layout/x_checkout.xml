<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/include1"
        android:layout_height="40dp"
        layout="@layout/x_include_header" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include1"
        android:background="#f37165" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivCheckOfferPhoto"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/ivCheckOfferPhoto"
        android:text="Valor Unit.:"
        android:textColor="#808080"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:text="Frete:"
        android:textColor="#808080"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="3dp"
        android:text="Valor Total:"
        android:textColor="#808080"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="3dp"
        android:text="Prazo de Ent.:"
        android:textColor="#808080"
        android:textSize="11dp" />

    <ProgressBar
        android:id="@+id/pbCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <WebView
        android:id="@+id/wvMakePayment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spCheckAddresses"
        android:visibility="gone" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/ivCheckOfferPhoto"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_2"
        android:padding="5dp"
        android:src="@drawable/examplo_img_horizontal" />

    <TextView
        android:id="@+id/tvCheckUniVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView2"
        android:text="R$ 9999,99"
        android:textColor="#808080"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvCheckFrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="R$ 13,50"
        android:textColor="#808080"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tvCheckTotalVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView4"
        android:text="R$ 9999,99"
        android:textColor="#808080"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCheckQtdEntrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView5"
        android:text="10 dias úteis"
        android:textColor="#808080"
        android:textSize="11sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/tableRow4"
        android:layout_below="@+id/tableRow4"
        android:layout_marginTop="5dp"
        android:background="@drawable/border" />

    <View
        android:id="@+id/view3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/view2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/view2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view2"
        android:layout_below="@+id/view2"
        android:layout_marginTop="5dp"
        android:text="Código do Produto: "
        android:textColor="#808080"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tvCheckCodDoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/textView6"
        android:text="1111111"
        android:textColor="#808080"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="7dp"
        android:text="Quantidade"
        android:textColor="#808080"
        android:textSize="14sp" />

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:background="#cccccc" >
    </TableRow>

    <EditText
        android:id="@+id/etQtd"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tableRow5"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/btnLess"
        android:background="@drawable/border"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:inputType="number"
        android:text="22"
        android:textColor="#808080" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnLess"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/view3"
        android:layout_alignTop="@+id/etQtd"
        android:layout_marginLeft="5dp"
        android:background="@drawable/border"
        android:text="-"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPlus"
        android:layout_below="@+id/etQtd"
        android:layout_marginTop="7dp"
        android:text="Endereço de Entrega:"
        android:textColor="#808080"
        android:textSize="14sp" />

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:background="#cccccc" >
    </TableRow>

    <TextView
        android:id="@+id/tvCheckEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableRow6"
        android:layout_alignRight="@+id/tableRow6"
        android:layout_below="@+id/tableRow6"
        android:text="Rua .... endereco"
        android:textColor="#808080"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCheckEndereco"
        android:layout_alignRight="@+id/tableRow6"
        android:layout_below="@+id/tvCheckEndereco"
        android:text="Cep..."
        android:textColor="#808080"
        android:textSize="11sp" />

    <Spinner
        android:id="@+id/spCheckAddresses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:visibility="gone" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginRight="30dp"
        android:background="#cccccc" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_marginRight="30dp"
        android:background="#cccccc" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_marginRight="30dp"
        android:background="#cccccc" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginRight="30dp"
        android:background="#cccccc" >
    </TableRow>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/btnPagamentoCartao"
        android:layout_alignTop="@+id/btnCheckAddAddress"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/btnCheckAddAddress"
        android:background="#f37165"
        android:text="Escolher Endereço"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnPlus"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/tableRow5"
        android:background="@drawable/border"
        android:text="+"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/tvAddLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/tableRow6"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="TextView"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignTop="@+id/view2"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="12"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/view3"
        android:layout_alignTop="@+id/view3"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="22"
        android:textColor="#808080"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnPagamentoCartao"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#3399cc"
        android:text="COMPRAR"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnCheckAddAddress"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_above="@+id/btnPagamentoCartao"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/tvCheckFrete"
        android:background="#f37165"
        android:padding="5dp"
        android:text="Novo Endereço"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <View
        android:id="@+id/vHideMetricCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view2"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignRight="@+id/view3"
        android:layout_alignTop="@+id/view2"
        android:background="#ffffff"
        android:visibility="gone" />

    <View
        android:id="@+id/vBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:alpha="0.6"
        android:background="#000"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvCheckOfferTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/ivCheckOfferPhoto"
        android:layout_below="@+id/ivCheckOfferPhoto"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/tableRow7"
        android:background="#cccccc" >
    </TableRow>

</RelativeLayout>