<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_menu"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="30dp"
            android:textAlignment="center" >

            <ImageView
                android:id="@+id/imageFooterInvitations"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dashboard_on" />

            <TextView
                android:id="@+id/textViewFooterInvitations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Dashboard"
                android:textColor="#D97500"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageFooterDashboard"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:paddingLeft="10dp"
                android:src="@drawable/ofertas_off" />

            <TextView
                android:id="@+id/textViewFooterDash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Ofertas"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageFooterCompras"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:src="@drawable/compras_off" />

            <TextView
                android:id="@+id/textViewFooterCompras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Compras"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageFooterAssinaturas"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:src="@drawable/assinaturas_off" />

            <TextView
                android:id="@+id/textViewFooterAssinaturas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="Assinaturas"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageFooterWish"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:src="@drawable/wishlist_off" />

            <TextView
                android:id="@+id/textViewFooterWish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Wishlist"
                android:textSize="14dp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>