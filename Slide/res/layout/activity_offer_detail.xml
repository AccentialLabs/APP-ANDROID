<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_layout" >

    <!-- CABECALHO -->

    <include
        android:id="@+id/include1"
        android:layout_height="55dp"
        layout="@layout/activity_header_mobile" />

    <!-- SCROll -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rodape"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include1"
        android:layout_marginTop="-10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- CORPO -->

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/bg_top_title" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:lines="2"
                android:text="Teste"
                android:textSize="12dp"
                android:textStyle="bold" />

            <com.loopj.android.image.SmartImageView
                android:id="@+id/imageView_imagemOfferDetail"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView1"
                android:background="#fff"
                android:src="@drawable/examplo_img_horizontal" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/imageView_imagemOfferDetail"
                android:src="@drawable/icon_novo_p" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView_imagemOfferDetail"
                android:src="@drawable/diviser_h" />

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="53dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView3"
                android:background="#fff" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view1"
                android:src="@drawable/diviser_h" />

            <TextView
                android:id="@+id/textView_descricaoOfferDetail"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/view1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:scrollHorizontally="true"
                android:text="Descrição do Produto"
                android:textSize="12dp" />

            <!-- RODAPE -->

            <View
                android:id="@+id/view2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/imageView4" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView4"
                layout="@layout/activity_table_cores" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view2"
                android:src="@drawable/diviser_h" />

            <View
                android:id="@+id/view3"
                android:layout_width="160dp"
                android:layout_height="33dp"
                android:layout_below="@+id/imageView5"
                android:background="#fff" />

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="160dp"
                android:layout_height="33dp"
                android:layout_alignTop="@+id/view3"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/star_color" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/star_color" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/star_color" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/star_gray" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_gray" />

                <TextView
                    android:id="@+id/textView_countStarts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="+ 100"
                    android:textColor="#FF8C00"
                    android:textSize="11dp" />
            </TableRow>

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="160dp"
                android:layout_height="2dp"
                android:layout_below="@+id/view3"
                android:src="@drawable/diviser_h" />

            <View
                android:id="@+id/view4"
                android:layout_width="160dp"
                android:layout_height="39dp"
                android:layout_below="@+id/imageView15"
                android:background="#fff" />

            <com.loopj.android.image.SmartImageView
                android:id="@+id/imageView_imagemCompany"
                android:layout_width="160dp"
                android:layout_height="33dp"
                android:layout_alignTop="@+id/view4"
                android:layout_marginTop="2dp"
                android:src="@drawable/lglogo" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_alignTop="@+id/view3"
                android:layout_toRightOf="@+id/view3"
                android:src="@drawable/diviser_v" />

            <View
                android:id="@+id/view5"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:layout_alignTop="@+id/imageView16"
                android:layout_toRightOf="@+id/imageView16"
                android:background="#fff" />
            <!--
            <ImageView
                android:id="@+id/imageView_btnComprar"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_alignLeft="@+id/view5"
                android:layout_below="@+id/view5"
                android:background="#fff"
                android:src="@drawable/bg_btcomprar" />
            -->

            <TextView
                android:id="@+id/imageView_btnComprar"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_alignLeft="@+id/view5"
                android:layout_below="@+id/view5"
                android:background="@drawable/bg_btcomprar"
                android:text="COMPRAR"
                android:gravity="center"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/view3"
                android:layout_alignLeft="@+id/view5"
                android:layout_marginLeft="31dp"
                android:text="Por"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/textView_precoNovoOfferDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view4"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView2"
                android:text="R$50.000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_precoAntigoOfferDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView_precoNovoOfferDetail"
                android:layout_alignLeft="@+id/textView2"
                android:layout_marginBottom="-2dp"
                android:layout_marginTop="2dp"
                android:text="de R$1799,00"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView_precoNovoOfferDetail"
                android:layout_below="@+id/textView2"
                android:text="em até"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/textView_valorParcelasOfferDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/textView4"
                android:text="24x"
                android:textSize="7dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_toRightOf="@+id/textView_valorParcelasOfferDetail"
                android:text="de"
                android:textSize="7dp" />

            <TextView
                android:id="@+id/textView_valorTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/textView5"
                android:text="RS 99.99"
                android:textSize="9dp" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_btnComprar"
                android:src="@drawable/diviser_h" />

            <ImageView
                android:id="@+id/imageView_enviaAmigoOfferDet"
                android:layout_width="80dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView17"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="79dp"
                android:src="@drawable/bt_enviaramigo" />

            <ImageView
                android:id="@+id/imageView_btCompartilharOfferDetail"
                android:layout_width="80dp"
                android:layout_height="18dp"
                android:layout_alignLeft="@+id/imageView_btnComprar"
                android:layout_alignTop="@+id/imageView_enviaAmigoOfferDet"
                android:src="@drawable/bt_compartilhar" />

            <!-- TABELA DO MENU -->


            <!--
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView_enviaAmigoOfferDet" >

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_marginTop="-4dp"
                    android:layout_weight="1"
                    android:src="@drawable/bg_tab_on" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginBottom="-5dp"
                    android:layout_weight="1"
                    android:src="@drawable/bg_tab_off" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:src="@drawable/bg_tab_off" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:src="@drawable/bg_tab_off" />
            </TableRow>
            -->

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/imageView_enviaAmigoOfferDet"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/textView_textoProduto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_tab_on"
                    android:gravity="center"
                    android:text="PRODUTO"
                    android:textColor="#DAA520"
                    android:textSize="7dp" />

                <TextView
                    android:id="@+id/textView_textoInformacoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_tab_off"
                    android:gravity="center"
                    android:text="INFORMAÇÕES"
                    android:textColor="#DAA520"
                    android:textSize="7dp" />

                <TextView
                    android:id="@+id/textView_textoEspecificacoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_tab_off"
                    android:gravity="center"
                    android:text="ESPECIFICACÕES"
                    android:textColor="#DAA520"
                    android:textSize="7dp" />

                <TextView
                    android:id="@+id/textView_textoOpinioes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_tab_off"
                    android:gravity="center"
                    android:text="OPINIÕES"
                    android:textColor="#DAA520"
                    android:textSize="7dp" />
            </TableRow>

            <!-- VIEWS INVISIVEIS -->

            <TextView
                android:id="@+id/textView_textoValidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView_numeroEstoque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView_offerShowSpecification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp" />
        </RelativeLayout>
    </ScrollView>

    <!-- CABECALHO -->

    <LinearLayout
        android:id="@+id/rodape"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            layout="@layout/activity_footer_mobile"
            android:gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>