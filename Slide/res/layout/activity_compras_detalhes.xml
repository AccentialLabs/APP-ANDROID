<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <View
        android:id="@+id/view3"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFFAF0" />

    <View
        android:id="@+id/View01"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:layout_toRightOf="@+id/view3"
        android:background="#FFFAF0" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/View01"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/diviser_v" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/View02"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/diviser_v" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/View03"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/diviser_v" />

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/bg_dadosempresa" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/imageView_ComprasDetailImage"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:src="@drawable/not_found_logo" />
    </TableRow>

    <TextView
        android:id="@+id/textView_ComprasDetailCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tableRow3"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:text="Vital Esthetic"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView_ComprasDetailCompanyTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ComprasDetailCompanyName"
        android:layout_below="@+id/textView_ComprasDetailCompanyName"
        android:text="11 9999-9999"
        android:textSize="11dp" />

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/bg_dadosentrega" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Prazo de \n entrega"
            android:textSize="14dp"
            android:textStyle="bold" />
    </TableRow>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableRow4"
        android:layout_below="@+id/tableRow4"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:text="Previsão de até"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView_ComprasDetailCompanyPrazo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignTop="@+id/textView_ComprasDetailCompanyTel"
        android:text="2 dias úteis"
        android:textSize="11dp" />

    <View
        android:id="@+id/View02"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view2"
        android:layout_marginTop="2dp"
        android:background="#FFFAF0" />

    <TextView
        android:id="@+id/textView_ComprasDetailCompanyFormaPagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableRow7"
        android:layout_below="@+id/tableRow7"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:text="Crédito - American Express"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView_ComprasDetailCompanyNumParcelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ComprasDetailCompanyFormaPagamento"
        android:layout_below="@+id/textView_ComprasDetailCompanyFormaPagamento"
        android:text="em 3x"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ComprasDetailCompanyNumParcelas"
        android:layout_below="@+id/textView_ComprasDetailCompanyNumParcelas"
        android:text="com juros de 1%"
        android:textSize="12dp" />

    <View
        android:id="@+id/View03"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignTop="@+id/View02"
        android:background="#FFFAF0" />

    <TextView
        android:id="@+id/textView_ComprasDeatilCompanyCodMoip"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:text="9999"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view2"
        android:layout_marginBottom="-4dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView_ComprasDetailCompanyEmail"
        android:src="@drawable/bg_emailempresa" />

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/View02"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/bg_dadosvalores" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Forma de \n pagamento"
            android:textSize="14dp"
            android:textStyle="bold" />
    </TableRow>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ComprasDetailCompanyPrazo"
        android:layout_alignTop="@+id/textView_ComprasDetailCompanyFormaPagamento"
        android:text="Código"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView_ComprasDetailCompanyEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_ComprasDetailCompanyTel"
        android:layout_toRightOf="@+id/imageView6"
        android:text="Ver email"
        android:textSize="11dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignTop="@+id/textView_ComprasDetailCompanyEmail"
        android:text="atendimento@vitalesthetic.com.br"
        android:textColor="#fff"
        android:textSize="12dp" />

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/View03"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/bg_dadosmoip" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Sistema de \n pagamento"
            android:textSize="14dp"
            android:textStyle="bold" />
    </TableRow>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/View03"
        android:layout_alignTop="@+id/View03"
        android:layout_marginTop="8dp"
        android:src="@drawable/diviser_v" />

</RelativeLayout>