<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.loopj.android.image.SmartImageView
        android:id="@+id/ivCompLogo"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border" />

    <TextView
        android:id="@+id/tvCompanyEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCompanyNAme"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvCompanyNAme"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:alpha="0.7"
        android:text="nononnonno@nonono.com"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvCompanyNAme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ivCompLogo"
        android:text="TextView"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ivCompLogo"
        android:layout_marginTop="15dp" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/tvCompanyNAme"
        android:layout_below="@+id/tvCompanyNAme"
        android:layout_marginRight="15dp"
        android:background="#cccccc" >
    </TableRow>

</RelativeLayout>