<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvAddressName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Casa"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/tvAddressName"
        android:layout_below="@+id/tvAddressName"
        android:layout_marginRight="20dp"
        android:background="#cccccc" >
    </TableRow>

    <TextView
        android:id="@+id/tvAddressFirstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableRow1"
        android:layout_alignRight="@+id/tableRow1"
        android:layout_below="@+id/tableRow1"
        android:layout_marginTop="3dp"
        android:text="Rua NOnonono NONO "
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvAddressSecondLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvAddressFirstLine"
        android:layout_below="@+id/tvAddressFirstLine"
        android:text="CEP: 00000-000"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvAddressSecondLine"
        android:layout_marginTop="10dp"
        android:alpha="0.2"
        android:background="#cccccc" >
    </TableRow>

</RelativeLayout>