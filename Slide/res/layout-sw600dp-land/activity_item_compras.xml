<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="62dp"
    android:background="#ffffff" >

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/imageView_bgTitle"
        android:layout_marginEnd="5dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView_ComprasNumPedido"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="9999"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/diviser_v" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/smartImageView_ComprasPhotoPedido"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center" >

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView_ComprasTitleOffer"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Tratamento de limpeza de pele"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView_ComprasDescOffer"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="2 sessões de LIMPEZA DE PELE por um preço imperdivel! Comprando a promoção e..."
                    android:textSize="12dp"
                    android:typeface="normal" />
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/diviser_v" />

        <TextView
            android:id="@+id/textView_ComprasDataCompra"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="24/09/2013"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/diviser_v" />

        <TextView
            android:id="@+id/textView_ComprasValorTotal"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="R$ 9999,99"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/diviser_v" />

        <TextView
            android:id="@+id/textView_ComprasStatus"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="INÍCIO"
            android:textSize="11dp" />
    </TableRow>

</RelativeLayout>