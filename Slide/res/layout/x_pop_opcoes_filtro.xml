<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Filtrar ofertas por..."
        android:textColor="#808080"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFilterByCategory"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:background="#f37165"
        android:text="Categorias"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnFilterMyProfile"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnFilterByCategory"
        android:layout_alignRight="@+id/btnFilterByCategory"
        android:layout_below="@+id/btnFilterByCategory"
        android:layout_marginTop="3dp"
        android:background="#3399cc"
        android:text="Meu Perfil"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnFilterOtherProfile"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnFilterMyProfile"
        android:layout_alignRight="@+id/btnFilterMyProfile"
        android:layout_below="@+id/btnFilterMyProfile"
        android:layout_marginTop="3dp"
        android:background="#808080"
        android:text="Outro Perfil"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnFilterCancel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnFilterOtherProfile"
        android:layout_alignRight="@+id/btnFilterOtherProfile"
        android:layout_below="@+id/btnFilterOtherProfile"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:background="#664d4d4d"
        android:text="Cancelar"
        android:textColor="#ffffff" />

</RelativeLayout>