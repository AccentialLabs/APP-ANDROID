<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_height="55dp"
        layout="@layout/activity_header_mobile" />

    <LinearLayout
        android:id="@+id/linearLayout_companies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_compInviteCountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFA500" >

            <TextView
                android:id="@+id/textView_companiesListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/compInviteTitle"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </TableRow>

        <ListView
            android:id="@+id/listView_compInvite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"
            android:textAlignment="center" >

            <TextView
                android:id="@+id/textView_compInviteNotFound"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/compInviteTitleNotFound"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>
    </LinearLayout>

    <include
        android:layout_height="55dp"
        layout="@layout/include_tablet_footer" />

</LinearLayout>