<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.loopj.android.image.SmartImageView
        android:id="@+id/ivInviteCompLogo"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:padding="5dp"
        android:src="@drawable/not_found_logo" />

    <TextView
        android:id="@+id/tvIviteCompName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ivInviteCompLogo"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/ivInviteCompLogo"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="TextView"
        android:textColor="#808080"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ivInviteCompLogo"
        android:layout_marginTop="10dp"
        android:alpha="0.1"
        android:background="#FF7F00" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/tvIviteCompName"
        android:layout_below="@+id/tvIviteCompName"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="#cccccc" >
    </TableRow>

    <TextView
        android:id="@+id/tvIviteCompEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableRow2"
        android:layout_alignRight="@+id/tableRow2"
        android:layout_below="@+id/tableRow2"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#808080"
        android:textSize="12sp" />

</RelativeLayout>