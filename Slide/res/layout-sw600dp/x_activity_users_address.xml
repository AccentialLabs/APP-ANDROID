<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/include1"
        android:layout_height="40dp"
        layout="@layout/x_include_header" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include1"
        android:background="#f37165" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="Endereço"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/ivUserPhoto"
        android:text="CEP"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:textColor="#808080"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:background="#cccccc" >
    </TableRow>

    <EditText
        android:id="@+id/etUserCep"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/tableRow1"
        android:layout_below="@+id/textView3"
        android:background="@null"
        android:ems="10"
        android:hint="CEP"
        android:inputType="number"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="#808080"
        android:textColorHint="#808080"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etUserCep"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/etUserCep"
        android:layout_marginTop="10dp"
        android:text="Endereço"
        android:textColor="#808080"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/tableRow1"
        android:layout_below="@+id/textView4"
        android:background="#cccccc" >
    </TableRow>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView4"
        android:text="Número"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUserAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:background="@null"
        android:ems="10"
        android:hint="Endereço"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="#808080"
        android:textColorHint="#808080"
        android:textSize="16sp" >
    </EditText>

    <EditText
        android:id="@+id/etUserNumber"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/tableRow2"
        android:layout_below="@+id/textView5"
        android:background="@null"
        android:ems="10"
        android:hint="99999"
        android:inputType="number"
        android:maxLength="9"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="#808080"
        android:textColorHint="#808080"
        android:textSize="16sp" >
    </EditText>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etUserAddress"
        android:layout_alignRight="@+id/etUserAddress"
        android:layout_below="@+id/etUserAddress"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="Complemento"
        android:textColor="#808080"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignRight="@+id/tableRow2"
        android:layout_below="@+id/textView7"
        android:background="#cccccc" >
    </TableRow>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView7"
        android:text="Bairro"
        android:textColor="#808080"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUserComplement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:background="@null"
        android:ems="10"
        android:hint="Complemento"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="#808080"
        android:textColorHint="#808080"
        android:textSize="16sp" >
    </EditText>

    <EditText
        android:id="@+id/etUserDistrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etUserComplement"
        android:layout_alignBottom="@+id/etUserComplement"
        android:layout_alignRight="@+id/tableRow4"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/etUserComplement"
        android:background="@null"
        android:ems="10"
        android:hint="Bairro"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="#808080"
        android:textColorHint="#808080"
        android:textSize="14sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etUserComplement"
        android:layout_alignRight="@+id/etUserComplement"
        android:layout_below="@+id/etUserComplement"
        android:layout_marginTop="10dp"
        android:text="Cidade"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignRight="@+id/etUserDistrict"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="30dp"
        android:background="#cccccc" >
    </TableRow>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView8"
        android:text="Estado"
        android:textColor="#808080"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUserCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignRight="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:background="@null"
        android:ems="10"
        android:hint="Cidade"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="#808080"
        android:textColorHint="#808080"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spUserUf"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignRight="@+id/etUserDistrict"
        android:layout_alignTop="@+id/etUserCity"
        android:background="@null" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/ivUserPhoto"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3"
        android:background="@drawable/edit_border"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btnUserAddressSave"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/btnUserAddressCancel"
        android:layout_alignBottom="@+id/btnUserAddressCancel"
        android:layout_alignParentLeft="true"
        android:background="#3399cc"
        android:text="Salvar"
        android:layout_marginLeft="15dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnUserAddressCancel"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#664d4d4d"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="Cancelar"
        android:textColor="#ffffff" />

</RelativeLayout>