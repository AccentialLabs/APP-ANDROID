<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/textView_productName"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow1"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="NOME DO PRODUTO"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_productName"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp"
        android:gravity="left"
        android:maxLines="3"
        android:text="DESCRICAO DO PRODUTO"
        android:textSize="11dp" />

    <!--
    CAMPO NOME COMENTADO PARA USO FUTURO
         <TextView
        android:id="@+id/textView_userName"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Nome do Usuario"
        android:textSize="11dp" />
    -->

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="3dp"
        android:src="@drawable/diviser_h" />

    <!-- maximo de linhas para nome do produto: 2 - 55 caracteres -->


    <!-- maximo de linhas para descricao do produto: 3 - 89 caracteres -->

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/imageView4"
        android:gravity="center"
        android:text="@string/wishlistTableDatSolicita"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_wishDatSolicitacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:gravity="center"
        android:text="11/11/2013"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/imageView2"
        android:gravity="center"
        android:text="@string/wishlistTableDatLimite"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_wishDatLimite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignRight="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:gravity="center"
        android:text="30/12/2013"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_wishDatSolicitacao"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginLeft="6dp"
        android:onClick="deleteWish"
        android:src="@drawable/bt_delete" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/imageView3"
        android:src="@drawable/diviser_v" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="2dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/textView7"
        android:src="@drawable/diviser_v" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#F5DEB3" >
    </TableRow>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="2dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/textView8"
        android:src="@drawable/diviser_v" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:gravity="center"
        android:text="Ofertas"
        android:textColor="#D2691E"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_qtdOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_wishDatLimite"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/imageView5"
        android:gravity="center"
        android:text="0"
        android:textSize="12dp" />

</RelativeLayout>