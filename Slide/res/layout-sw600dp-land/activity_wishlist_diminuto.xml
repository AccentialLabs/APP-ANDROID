<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_layout" >

    <View
        android:id="@+id/view1"
        android:layout_width="650dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_box_wishlist" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_wishlist" />

        <TextView
            android:id="@+id/textView_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tableRow1"
            android:layout_alignLeft="@+id/tableRow1"
            android:layout_marginLeft="5dp"
            android:text="@string/wishlistTitulo"
            android:textColor="#fff"
            android:textSize="16dp" />
    </TableRow>

    <View
        android:id="@+id/imageView_backSpinner1"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/tableRow1"
        android:layout_below="@+id/tableRow1"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="#fff" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView_backSpinner1"
        android:layout_alignTop="@+id/imageView_backSpinner1" />

    <View
        android:id="@+id/imageView_backSpinner2"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView_backSpinner1"
        android:layout_below="@+id/imageView_backSpinner1"
        android:layout_marginTop="8dp"
        android:background="#fff" />

    <Spinner
        android:id="@+id/spinner_subCategory"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView_backSpinner2"
        android:layout_alignTop="@+id/imageView_backSpinner2" />

    <View
        android:id="@+id/imageView_backText1"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView_backSpinner2"
        android:layout_below="@+id/imageView_backSpinner2"
        android:layout_marginTop="8dp"
        android:background="#fff" />

    <EditText
        android:id="@+id/editText_productName"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/imageView_backText1"
        android:layout_alignLeft="@+id/imageView_backText1"
        android:layout_alignRight="@+id/imageView_backText1"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:ems="10"
        android:hint="Nome de produto"
        android:inputType="textEmailAddress" />

    <View
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView_backText1"
        android:layout_below="@+id/imageView_backText1"
        android:layout_marginTop="8dp"
        android:background="#fff" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:ems="10"
        android:hint="Data limite"
        android:inputType="date" >

        <requestFocus />
    </EditText>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="520dp"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/view1"
        android:background="#D2691E" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/wishlistDesejosCadastrados"
            android:textColor="#ffffff"
            android:textSize="16dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/tableRow2"
        android:layout_toRightOf="@+id/tableRow2"
        android:background="#8B4500" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/wishlistProdutosDesejados"
            android:textColor="#ffffff"
            android:textSize="10dp" />
    </TableRow>

    <View
        android:id="@+id/view2"
        android:layout_width="130dp"
        android:layout_height="260dp"
        android:layout_alignLeft="@+id/tableRow3"
        android:layout_below="@+id/tableRow3"
        android:background="#ffffff" />

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="520dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/tableRow2"
        android:layout_alignTop="@+id/view2"
        android:background="#F5DEB3" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/wishlistTableCliente"
            android:textColor="#D2691E" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/wishlistTableProduto"
            android:textColor="#D2691E" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/wishlistTableData"
            android:textColor="#D2691E" />
    </TableRow>

    <ListView
        android:id="@+id/listView_listaWishlist"
        android:layout_width="520dp"
        android:layout_height="230dp"
        android:layout_alignLeft="@+id/tableRow4"
        android:layout_below="@+id/tableRow4"
        android:background="#ffffff" >
    </ListView>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignTop="@+id/listView_listaWishlist"
        android:src="@drawable/diviser_v" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/view3"
        android:layout_alignTop="@+id/imageView2"
        android:onClick="saveWishlist"
        android:src="@drawable/bt_cadastrar" />

    <View
        android:id="@+id/view3"
        android:layout_width="220dp"
        android:layout_height="105dp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignTop="@+id/imageView_backSpinner1"
        android:background="#fff" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_backSpinner1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/spinner_category"
        android:background="#fff"
        android:ems="10"
        android:hint="Descrição"
        android:inputType="textMultiLine" />

</RelativeLayout>