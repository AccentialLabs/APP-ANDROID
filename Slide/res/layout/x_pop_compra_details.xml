<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include1"
        android:background="#f37165" />

    <TextView
        android:id="@+id/tvCompraOfferTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvCompraValueTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/textView4"
                android:text="R$ 9999,99"
                android:textColor="#808080"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCompraValueUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/textView3"
                android:text="R$ 9999,99"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/tvCompraQtd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/textView2"
                android:text="999"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/tvCompName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="3dp"
                android:text="TextView"
                android:textColor="#808080"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCompEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvCompName"
                android:layout_below="@+id/tvCompName"
                android:text="nononon@nonoon.non"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCompTel"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Prazo de Entrega"
                android:textColor="#808080"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="Previsão de até"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/tvCompEntregaQtd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginLeft="5dp"
                android:text="2 dias"
                android:textColor="#808080"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Forma de Pagamento"
                android:textColor="#808080"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCompPaymentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="Crédito - Master Card"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCompPaymentType"
                android:layout_marginLeft="5dp"
                android:text="em 3x"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="3dp"
                android:text="Qtd.:"
                android:textColor="#808080"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivCompraOfferPhoto"
                android:layout_below="@+id/ivCompraOfferPhoto"
                android:layout_marginTop="20dp"
                android:text="Empresa"
                android:textColor="#808080"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/tvCompEntregaQtd"
                android:text="úteis"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/tvCompraQtd"
                android:layout_marginTop="3dp"
                android:text="Total:"
                android:textColor="#808080"
                android:textStyle="bold" />

            <com.loopj.android.image.SmartImageView
                android:id="@+id/ivCompraOfferPhoto"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/table_border" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivCompraOfferPhoto"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ivCompraOfferPhoto"
                android:text="Valor Unit.:"
                android:textColor="#808080"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/textView3"
                android:layout_marginRight="30dp"
                android:background="#cccccc" >
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvCompraQtd"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/tvCompPaymentType"
                android:background="#cccccc" >
            </TableRow>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/tableRow3"
                android:layout_alignRight="@+id/tableRow3"
                android:layout_marginBottom="3dp"
                android:alpha="0.4"
                android:src="@drawable/icon_compras_empresas" />

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="#cccccc" >
            </TableRow>

            <TextView
                android:id="@+id/tvCompTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvCompEmail"
                android:layout_below="@+id/tvCompEmail"
                android:text="11 9999 99999"
                android:textColor="#808080" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/tableRow4"
                android:layout_alignRight="@+id/tableRow4"
                android:layout_marginBottom="3dp"
                android:alpha="0.5"
                android:src="@drawable/icon_compras_prazo" />

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="#cccccc" >
            </TableRow>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/tableRow5"
                android:layout_alignRight="@+id/tableRow5"
                android:layout_marginBottom="3dp"
                android:alpha="0.5"
                android:src="@drawable/icon_compras_forma" />

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_marginRight="10dp"
                android:background="#cccccc" >
            </TableRow>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>